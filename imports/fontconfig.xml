<?xml version="1.0"?>
<!DOCTYPE fontconfig SYSTEM "urn:fontconfig:fonts.dtd">
<!-- /etc/fonts/fonts.conf file to configure system font access -->
<fontconfig>
  <alias>
    <family>serif</family>
    <prefer>
      <family>TeX Gyre Schola</family>
    </prefer>
  </alias>
  <alias>
    <family>times</family>
    <prefer>
      <family>TeX Gyre Schola</family>
    </prefer>
  </alias>
  <alias>
    <family>arial</family>
    <prefer>
      <family>TeX Gyre Schola</family>
    </prefer>
  </alias>
  <alias>
    <family>helvetica</family>
    <prefer>
      <family>TeX Gyre Schola</family>
    </prefer>
  </alias>
</fontconfig>
