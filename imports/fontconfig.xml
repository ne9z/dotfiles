<?xml version="1.0"?>
<!DOCTYPE fontconfig SYSTEM "urn:fontconfig:fonts.dtd">
<!-- /etc/fonts/fonts.conf file to configure system font access -->
<fontconfig>
  <match target="font">
    <test name="weight" qual="any" compare="eq"><const>regular</const></test>
    <test name="family" qual="any" compare="contains"><string>Noto Serif CJK</string></test>
    <edit name="weight" mode="assign">
      <const>medium</const>
    </edit>
  </match>
</fontconfig>
